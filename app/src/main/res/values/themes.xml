<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.iKeyConnect" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="ThemeOverlay.NumberPicker" parent="" >
        <item name="colorControlNormal">@color/primary</item>
        <item name="android:editTextColor">@color/primary</item>
    </style>
    <style name="Widget.Catalog.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/light_primary</item>
    </style>
    <style name="iKey.MaterialAlertDialog.MaterialComponents.Title.Text" parent="Base.MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="Theme.iKey.Permission.MaterialAlertDialog.FilledButton" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Catalog.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Catalog.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Catalog.Button.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/iKey.MaterialAlertDialog.MaterialComponents.Title.Text</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:ellipsize">none</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="Widget.App.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.App.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.NegativeButton</item>
    </style>
</resources>